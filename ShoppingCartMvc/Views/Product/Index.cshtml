@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary" >
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
</div>
<br /> <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Quantity
            </th>
            <th>
                Product Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td width="20%">
                    @item.ProductId
                </td>
                <td width="20%"> 
                    @item.Name
                </td>
                <td width="20%"> 
                    @item.Quantity
                </td>
                <td width="20%">
                    @item.Price
                </td>
                <td width="20%">
                    <div class="btn-group" role="group"></div>
                    <a href="/Product/Edit/@item.ProductId"  class="btn btn-primary mx-0 my-0" style="width:200px" ><i class="bi bi-pencil-square"></i> Edit</a> <hr>
                    <a href="/Product/Delete/@item.ProductId" class="btn btn-danger mx-0 my-0" style="width:200px"><i class="bi bi-trash-fill"></i>Delete</a> 
                </td>
            </tr>
        }
    </tbody>
</table>

